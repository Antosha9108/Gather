<%- include('partials/header') -%>

  <main class="container">
    <div class="center-screen">
      <section class="col-6 mt-5">
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el=> { %>
            <div class="alert alert-danger">
              <%= el.msg %>
            </div>
            <% }) %>
              <% } %>
                <% if (locals.messages.info) { %>
                  <% messages.info.forEach( el=> { %>
                    <div class="alert alert-info">
                      <%= el.msg %>
                    </div>
                    <% }) %>
                      <% } %>
                        <form action="/login" method="POST">
                          <div class="mb-3 ">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" class="form-control bg-gray-900" id="exampleInputEmail1"
                              aria-describedby="emailHelp" name="email" />
                          </div>
                          <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label ">Password</label>
                            <input type="password" class="form-control bg-gray-900" id="exampleInputPassword1"
                              name="password" />
                          </div>
                          <button type="submit" class="btn bg-blue-500 shadow-lg shadow-blue-500/50">Submit</button>
                        </form>
      </section>
    </div>
  </main>

  <%- include('partials/footer') -%>