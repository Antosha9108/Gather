<%- include('partials/header') -%>
    <main class="container signup">
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST" class="">
                    <div class="mb-3">
                        <label for="userName" class="form-label form-control">User Name</label>
                        <input type="text" class="form-control bg-gray-900" id="userName" name="userName">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class=" form-control ">Email address</label>
                      <input type="email" class="form-control bg-gray-900" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text"></div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control bg-gray-900" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control bg-gray-900" id="confirmPassword" name="confirmPassword">
                      </div>
                      <div class=" flex justify-center">
                        <button type="submit" class=" submit-button btn bg-blue-500 shadow-lg shadow-blue-500/50">Submit</button>
                      </div>
                </form>
            </section>
        </div>
    </main>

<%- include('partials/footer') -%>