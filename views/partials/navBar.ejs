<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <div class="flex  flex-wrap place-items-center">
        <section class="relative mx-auto">
            <!-- navbar -->
            <nav class="flex justify-between bg-gray-900 text-white w-screen">
                <div class="px-5 xl:px-12 py-6 flex w-full items-center">
                    <a class="text-3xl font-bold font-heading" href="/eventFeed">
                        Gather
                    </a>
                    <!-- Nav Links -->

                    <ul
                        class="hidden md:flex flex-wrap px-4 mx-auto font-semibold font-heading lg:space-x-12  space-x-2">
                        <li><a class="hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                                href="/profile">Profile</a></li>
                        <li><a class="hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                                href="/eventFeed">Events</a></li>
                        <li><a class="hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                                href="/feed">Items</a></li>
                        <!-- <li><a class="hover:text-gray-200" href="#">Favorites</a></li> -->
                        <li><a class="hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                                href="/logout">Logout</a></li>

                    </ul>
                    <button
                        class="hidden md:flex justify-end bg-sky-500/75 rounded-md px-3 py-2 text-sm hover:bg-sky-500/100 hover:scale-105 transition ease-out duration-300"
                        onclick="openModal()">Create
                        Event</button>


                </div>
                <!--! Responsive navbar -->
                <!-- burger icon for mobile nav -->
                <div class="self-center mr-12 md:hidden" id="burger">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:text-gray-200" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </div>
            </nav>


            <!--Responsive burger nav menu  -->
            <div class="md:hidden flex justify-end bg-gray-900">
                <ul class=" md:hidden grid md:flex-col px-4 mb-3 font-semibold text-white" id="menu">

                    <li><a class="ml-6 hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                            href="/profile">Profile</a></li>
                    <li><a class="ml-6 hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                            href="/eventFeed">Events</a></li>
                    <li><a class="ml-6 hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                            href="/feed">Items</a></li>
                    <!-- <li><a class="ml-6 hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                            href="#">Favorites</a></li> -->
                    <li><a class="ml-6 hover:text-gray-200 hover:underline hover:decoration-sky-500 hover:decoration-2"
                            href="/logout">Logout</a></li>
                    <button
                        class="justify-end bg-sky-500/75 rounded-md px-3 py-2 text-sm hover:bg-sky-500/100 hover:scale-105 transition ease-out duration-300"
                        onclick="openModal()">Create
                        Event</button>
                </ul>
            </div>
        </section>

    </div>



    <!-- MODAL TEST -->
    <div id="modal"
        class=" fixed z-10 inset-0 overflow-y-auto hidden fixed inset-0 bg-gray-700 bg-opacity-75 transition-opacity ">
        <div class="flex items-center justify-center min-h-screen">
            <div class="bg-white rounded-lg w-1/2 p-8 border border-gray-700">
                <div class="flex justify-between">
                    <h2 class="text-2xl font-bold mb-4">Add event</h2>
                    <h2 class="fa-solid fa-x  rounded p-2 m-2  hover:scale-110 transition ease-out duration-300"
                        onclick="closeModal()">
                    </h2>
                </div>


                <form action="/event/createEvent" enctype="multipart/form-data" method="POST">

                    <div class=" mb-4">
                        <label class="block text-gray-700 font-bold mb-2" for="title">
                            Event Title
                        </label>
                        <input
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="title" name="title" type="text" placeholder="Enter event title">
                    </div>


                    <div class="mb-4">
                        <label class="block text-gray-700 font-bold mb-2" for="caption">
                            Event Notes
                        </label>
                        <textarea
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="description" name="description" placeholder="Enter event notes"></textarea>
                    </div>



                    <div class="mb-4">
                        <label class="block text-gray-700 font-bold mb-2" for="imgUpload">
                            Event Image
                        </label>
                        <input type="file" class="border p-2 w-full" id="imageUpload" name="file">
                    </div>


                    <div class="flex justify-center">
                        <button type="submit"
                            class="bg-sky-500/75 shadow-lg shadow-gray-500/50 rounded p-3 px-4 m-3 text-white  hover:scale-105 transition ease-out duration-300">
                            Create Event
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- <script src="modal.js"></script> -->
    <!-- <script src="nav.js"></script> -->
    <script>
        const burger = document.querySelector('#burger');
        const menu = document.querySelector('#menu');


        burger.addEventListener('click', () => {
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
            } else {
                menu.classList.add('hidden')
            }
        })</script>
</body>


</html>